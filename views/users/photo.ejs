<h1>Upload/Change Profile Image!</h1>

<form class="uploadImage" action="/users/photo" method="POST" enctype="multipart/form-data">
  <label for="image">Зураг</label><br>
  <input type="file" id="image" name="image" accept="image/*" /><br>
  <input type="submit" name="submit" value="Submit">
</form>

  <% if(typeof imageURL != undefined) {%>
    <% for(let i = 0; i < imageURL.length; i++) { %>
      <img src=" <%= imageURL[i] %> " alt="User Photos">
    <% } %>
  <% } else { %>
    <label for="">avatar</label>
    <img src="https://storage.cloud.google.com/authdemo-f7863.appspot.com/profile/astronaut.png" alt="User Profile Image Not Available">
  <% } %>

<form action="/users/upload" method="POST">
  <input type="text" name="imageURL" value="<%= imageURL %>"><br>
  <label for="image">Хадгалах</label><br>
  <button type="submit">Хадгал</button>
</form>
